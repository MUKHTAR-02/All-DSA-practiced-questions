// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

void bubbleSort(int arr[], int n){
    bool flag = false;
    for(int i=1; i<n; i++){

        for(int j=0; j<n-i; j++){
            if(arr[j] > arr[j+1]){
                swap(arr[j], arr[j+1]);
                flag = true;
            }
        }
        if(flag == false){
            cout << "No rotation " << endl;
            break;
        }
    }
    if(flag == true){
        cout << "Yes rotation " << endl;
    }
    cout << "sorted array :" << endl;
    for(int i=0; i<n; i++){
        cout << arr[i] << " ";
    }
    cout << endl;
}

int main() {
    int n = 6;
    int arr[n] = {1,2,3,4,5,6};
    bubbleSort(arr, n);
    
    return 0;
}
